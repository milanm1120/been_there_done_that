<% if @destination.errors.any? %>           <!-- Displyaing Validation Errors -->
<div id="error_explanation">
  <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this article from being saved:</h2>

  <ul>
    <% @destination.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
